                                    {% endfor %}
                                {% endfor %}

                                <div>
                                    {% block fos_user_content %}
                                    {% endblock fos_user_content %}
                                </div>
                                
                                <div>
                                    {% block content %}
                                    {% endblock content %}
                                </div>
                        <footer>               
                            {{ '<p>Fuente del Norte S.A.</p>' }}               
                        </footer>
                   
            </div>
            </div>            
        </div>
        
        
        {% block javascripts %}
            {{ include("::jsLogin.html.twig") }}
        {% endblock javascripts %}
        
    </body>
