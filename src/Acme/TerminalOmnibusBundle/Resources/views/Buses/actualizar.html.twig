{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Actualizar Bus
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            actualizarBus.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
<form class="form-horizontal busForm" id="busForm" name="busForm" action="{{ url(route) }}" method="post" {{ form_enctype(form) }}>

    <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
    {{ form_errors(form) }}
    
    <div class="container-fluid">
        
    <div class="row-fluid"> 
    <div class="span12">
        <div class="row-fluid"> 
        <div class="span6">
        {{ form_label(form.codigo) }}
        {{ form_errors(form.codigo ) }}
        {{ form_widget(form.codigo , {'attr': {'placeholder': 'Entre el código'} }) }}
        </div>
        <div class="span6">
        {{ form_label(form.empresa) }}
        {{ form_errors(form.empresa ) }}
        {{ form_widget(form.empresa , {'attr': {'placeholder': 'Seleccione la empresa'} }) }}
        </div>
        </div>
    </div>
    </div>
    
    <div class="row-fluid"> 
    <div class="span12">
        <div class="row-fluid"> 
        <div class="span6">
        {{ form_label(form.tipo) }}
        {{ form_errors(form.tipo ) }}
        {{ form_widget(form.tipo , {'attr': {'placeholder': 'Seleccione el tipo'} }) }}
        </div>
        <div class="span6">
        {{ form_label(form.marca) }}
        {{ form_errors(form.marca ) }}
        {{ form_widget(form.marca , {'attr': {'placeholder': 'Seleccione la marca'} }) }}            
        </div>
        </div>
    </div>
    </div>
    
