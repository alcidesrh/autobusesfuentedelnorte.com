    </div>
    </div> 
        
    <div class="row-fluid"> 
    <div class="span12">
    {{ form_label(form.descripcion) }}
    {{ form_errors(form.descripcion ) }}
    {{ form_widget(form.descripcion , {'attr': {'placeholder': 'Entre la descripción'} }) }}
    </div>
    </div>         
        
    </div>    
    
    {{ form_rest(form) }}
        
</form>
    
