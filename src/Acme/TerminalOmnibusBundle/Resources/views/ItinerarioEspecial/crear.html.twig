{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Crear Itinerario Especial
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            crearItinerarioEspecial.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}

<form class="form-horizontal itinerarioEspecialForm" id="itinerarioEspecialForm" name="itinerarioEspecialForm" action="{{ path('itinerarioEspecial-crear-case1') }}" method="post" {{ form_enctype(form) }}>
    
    <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
    {{ form_errors(form) }}
    
    <div class="container-fluid">
    <div class="row-fluid">
    <div class="span12">  
    {{ form_label(form.fecha) }}
    <div id="datetimepicker_crear_itinerario_especial_command_fecha" class="input-append date form_datetime">
        {{ form_widget(form.fecha) }}
        <span class="add-on"><i class="icon-th"></i></span>
    </div>   
    {{ form_errors(form.fecha) }}
    </div> 
    </div> 
    
    <div class="row-fluid"> 
    <div class="span12">
    {{ form_label(form.ruta) }}
    {{ form_errors(form.ruta ) }}
    {{ form_widget(form.ruta , {'attr': {'placeholder': 'Seleccione la ruta'} }) }}
    </div>
    </div> 
        
    <div class="row-fluid"> 
    <div class="span12">
    {{ form_label(form.tipoBus) }}
    {{ form_errors(form.tipoBus ) }}
    {{ form_widget(form.tipoBus , {'attr': {'placeholder': 'Seleccione el tipo de bus'} }) }}
    </div>
    </div>
        
    <div class="row-fluid">     
    <div class="span12">  
    {{ form_label(form.motivo) }}
    {{ form_errors(form.motivo ) }}
    {{ form_widget(form.motivo , {'attr': {'placeholder': 'Especifique el motivo de la salida.'} }) }}
    </div> 
    </div> 
    
    </div>  
    
    <input type="hidden" id="pathHomeItinerarioEspecial" value="{{ url('itinerarioEspecial-home') }}"></input>
    {{ form_rest(form) }}
    
</form>
    
{% endblock %}

{% block contentFooterModal %}
   
    <a id="aceptar" href="#" class="btn btn-primary">Aceptar</a>
    <a id="cancelar" href="{{ url('homeInternal-default') }}" class="btn">Cancelar</a>
     
{% endblock %}