{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Reporte Test
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            frondendReporte.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal reporteForm" id="reporteForm" name="reporteForm" action="{{ path(route) }}" method="post" >
       
        <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
        <div id="accordionFilters" class="accordion" >
        <div class="accordion-group">
            
            <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionFilters" href="#collapseFilters">
            Parámetros del reporte
            </a>
            </div>   
            
            <div id="collapseFilters" class="accordion-body">
            <div class="accordion-inner">

            <div class="row-fluid">
            <div class="span12">
                <label class="control-label">Código:</label>
                <input id="codigo" name="codigo" type="text" placeholder="Filtrar por código" />
            </div>   
            </div>
                
            </div>
            </div>
            
        </div>
        </div>
        
        <div class="control-group">
            <a id="ejecutar" class="btn btn-primary" type="submit" href="#" data-type="PDF" ><i class="icon-filter icon-white"></i> PDF</a>
        </div>
        {{ form_rest(form) }}
    </form>
    
    <div id="pdf" name="pdf" class="pdf"></div> 
    
{% endblock %}

{% block contentFooterModal %}     
{% endblock %}






