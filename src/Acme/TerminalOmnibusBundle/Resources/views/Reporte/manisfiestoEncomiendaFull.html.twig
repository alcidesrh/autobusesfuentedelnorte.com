{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Manifiesto de Encomiendas
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            manisfiestoEncomiendaFull.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal reporteForm" id="reporteForm" name="reporteForm" action="{{ path(route) }}" method="post" >
       
        <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
        <div id="accordionFilters" class="accordion" >
        <div class="accordion-group">
            
            <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionFilters" href="#collapseFilters">
            Parámetros del reporte
            </a>
            </div>   
            
            <div id="collapseFilters" class="accordion-body">
            <div class="accordion-inner">

            <div class="row-fluid">
            <div class="span6">
                {{ form_label(form.salida) }}
                {{ form_widget(form.salida , {'attr': {'placeholder': 'Seleccione la salida' } }) }}
                {{ form_errors(form.salida ) }}
            </div> 
            <div class="span6">
            </div> 
            </div>
                
            <div class="row-fluid">
            <div class="span6">
                {{ form_label(form.estacionOrigen) }}
                {{ form_widget(form.estacionOrigen , {'attr': {'placeholder': 'Seleccione la estación origen' } }) }}
                {{ form_errors(form.estacionOrigen ) }}
            </div> 
            <div class="span6">
                {{ form_label(form.estacionDestino) }}
                {{ form_widget(form.estacionDestino , {'attr': {'placeholder': 'Seleccione la estación destino' } }) }}
                {{ form_errors(form.estacionDestino ) }}
            </div> 
            </div>
                
            </div>
            </div>
            
        </div>
        </div>
        
        <input type="hidden" id="pathListarSalidasPaginando" value="{{ url('ajaxListarSalidasPaginando') }}"></input>
        <div class="control-group">
            <a id="ejecutar" class="btn btn-primary" type="submit" href="#" data-type="PDF" ><i class="icon-filter icon-white"></i> PDF</a>
        </div>
        {{ form_rest(form) }}
    </form>
    
    <div id="pdf" name="pdf" class="pdf"></div> 
    
{% endblock %}

{% block contentFooterModal %}     
{% endblock %}






