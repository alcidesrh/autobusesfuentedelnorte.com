{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Depósitos de Agencia
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            frondendDepositoAgencia.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal" id="filtersForm">
        <div id="accordionFilters" class="accordion" >
        <div class="accordion-group">
        <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionFilters" href="#collapseFilters">
        Filtrar resultados
        </a>
        </div>    
        <div id="collapseFilters" class="accordion-body collapse">
        <div class="accordion-inner">
            
        <div class="row-fluid">
        <div class="span5">
            <div class="control-group">
                <label class="control-label" for="identificador">Id:</label>
            <div class="controls">
                <input type="text" id="identificador" name="identificador" placeholder="Filtrar por identificador" />
            </div>
            </div>       
        </div>
        <div class="span5">
            <div class="control-group">
                <label class="control-label" for="estacion">Agencia:</label>
            <div class="controls">
                <input type="text" id="estacion" name="estacion" placeholder="Filtrar por estación" />
            </div>
            </div>  
        </div>
        </div>
            
        <div class="row-fluid">
        <div class="span5">
            <div class="control-group"> 
                <label class="control-label" for="rangoFecha">Rango Fecha:</label>
            <div class="controls">
                <input id="rangoFecha" name="rangoFecha" type="text" placeholder="Filtrar por rango de fecha" />
            </div>
            </div>  
        </div>
        <div class="span5">
            <div class="control-group"> 
                <label class="control-label" for="numeroBoleta">Número Boleta:</label>
            <div class="controls">
                <input id="numeroBoleta" name="numeroBoleta" type="text" placeholder="Filtrar por número boleta" />
            </div>
            </div> 
        </div>
        </div>    
        
       <div class="control-group">
       <div class="controls"> 
            <a id="linkFilter" class="btn btn-primary" type="submit" href="#"><i class="icon-filter icon-white"></i> Filtrar</a>
       </div>
       </div> 
                
    </div>
    </div>
    </div>
    </div>
    </form>

    {{ renderMenu('menuDepositoAgencia') }}
    
    <table id="grid" style="display:none" data-url="{{url('deposito-agencia-listarPaginado')}}"></table>
   

{% endblock %}

{% block contentFooterModal %}
    
{% endblock %}






