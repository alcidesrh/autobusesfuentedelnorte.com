    <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
    {{ form_errors(form) }}
    
    <div class="container-fluid">
    <div class="row-fluid">
    <div class="span12">  
        <label> <strong> ¿Está seguro que desea rechazar el depósito? </strong> </label>
    </div> 
    </div>
    <div class="row-fluid">
    <div class="span12">  
        {{ form_label(form.motivoRechazo) }}
        {{ form_widget(form.motivoRechazo) }}
    </div> 
    </div>
    </div> 
    
    {{ form_rest(form) }}
    
</form>