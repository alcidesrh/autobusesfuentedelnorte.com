{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Encomiendas
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            frondendEncomiendas.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal" id="filtersForm">
        <div id="accordionFilters" class="accordion" >
        <div class="accordion-group">
        <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionFilters" href="#collapseFilters">
        Filtrar resultados
        </a>
        </div>    
        <div id="collapseFilters" class="accordion-body collapse">
        <div class="accordion-inner">
            
        <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="identificador">Id:</label>
            <div class="controls">
                <input type="text" id="identificador" name="identificador" placeholder="Filtrar por identificador" />
            </div>
            </div>       
         </div>
         <div class="span5" >
           <div class="control-group"> 
                <label class="control-label" for="empresa">Empresa:</label>
           <div class="controls">
                <input id="empresa" name="empresa" type="text" placeholder="Filtrar por empresa" />
           </div>
           </div>       
         </div>     
       </div>
       <div class="row-fluid">
         <div class="span5">
           <div class="control-group"> 
                <label class="control-label" for="ruta">Ruta:</label>
           <div class="controls">
                <input id="ruta" name="ruta" type="text" placeholder="Filtrar por ruta" />
           </div>
           </div>      
         </div>
         <div class="span5" >
           <div class="control-group"> 
                <label class="control-label" for="descripcion">Descripción:</label>
           <div class="controls">
                <input id="descripcion" name="descripcion" type="text" placeholder="Filtrar por descripción" />
           </div>
           </div>       
         </div>     
       </div> 
       <div class="row-fluid">
         <div class="span5">
                <div class="control-group"> 
                    <label class="control-label" for="cantidad">Cantidad:</label>
               <div class="controls">
                    <input id="cantidad" name="cantidad" type="text" placeholder="Filtrar por cantidad" />
               </div>
               </div>      
         </div>
         <div class="span5">
                <div class="control-group"> 
                    <label class="control-label" for="tipoEncomienda">Tipo de Encomienda:</label>
               <div class="controls">
                    <input id="tipoEncomienda" name="tipoEncomienda" type="text" placeholder="Filtrar por tipo de encomienda" />
               </div>
               </div>      
         </div>  
       </div> 
       <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="estacionOrigen">Origen:</label>
            <div class="controls">
                <input type="text" id="estacionOrigen" name="estacionOrigen" placeholder="Filtrar por estación de origen" />
            </div>
            </div>       
         </div>
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="estacionDestino">Destino:</label>
            <div class="controls">
                <input type="text" id="estacionDestino" name="estacionDestino" placeholder="Filtrar por estación de destino" />
            </div>
            </div>       
         </div>  
       </div>
       <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="tipoDocumento">Tipo Documento</label>
            <div class="controls">
                <input type="text" id="tipoDocumento" name="tipoDocumento" placeholder="Filtrar por tipo de documento" />
            </div>
            </div>       
         </div>
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="estado">Estado</label>
            <div class="controls">
                <input type="text" id="estado" name="estado" placeholder="Filtrar por estado" />
            </div>
            </div>       
         </div>
       </div>    
       <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="rangoFechaCreacion">Fecha de Creación</label>
            <div class="controls">
                <input type="text" id="rangoFechaCreacion" name="rangoFechaCreacion" placeholder="Filtrar por fecha de creación" />
            </div>
            </div>       
         </div>
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="tipoDocumento">Boleto</label>
            <div class="controls">
                <input type="text" id="boleto" name="boleto" placeholder="Filtrar por identificador de boleto" />
            </div>
            </div>       
         </div>
       </div>            
       <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="clienteRemitente">Cliente Remitente:</label>
            <div class="controls">
                <input type="text" id="clienteRemitente" name="clienteRemitente" placeholder="Filtrar por cliente remitente" data-pathListarClientesPaginando="{{ path('ajaxListarClientesPaginando') }}"/>
            </div>
            </div>       
         </div>
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="clienteDestinatario">Cliente Destinatario:</label>
            <div class="controls">
                <input type="text" id="clienteDestinatario" name="clienteDestinatario" placeholder="Filtrar por cliente destinatario" data-pathListarClientesPaginando="{{ path('ajaxListarClientesPaginando') }}"/>
            </div>
            </div>       
         </div>  
       </div>
            
       <div class="control-group">
       <div class="controls"> 
            <a id="linkFilter" class="btn btn-primary" type="submit" href="#"><i class="icon-filter icon-white"></i> Filtrar</a>
       </div>
       </div> 
    
    </div>
    </div>
    </div>
    </div>
    </form>

    {{ renderMenu('menuEncomiendas') }}   
    
    <table id="grid" style="display:none" data-url="{{url('encomiendas-listarPaginado')}}"></table>
    
    <input type="hidden" id="pathPrintEncomiendaFactura" value="{{ url('ajaxPrintFacturaEncomienda') }}"></input>
    <input type="hidden" id="pathPrintEncomiendaDatos" value="{{ url('ajaxPrintDatosEncomienda') }}"></input>  
    
    
{% endblock %}

