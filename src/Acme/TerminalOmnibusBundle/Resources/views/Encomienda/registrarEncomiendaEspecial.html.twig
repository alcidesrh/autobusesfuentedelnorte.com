{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
Registrar Encomienda Especial
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            registrarEncomiendaEspecial.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal encomiendaForm" id="encomiendaForm" name="encomiendaForm" action="{{ path(route) }}" method="post" >
       
        <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
        {{ form_errors(form) }}
        
        <div class="row-fluid">
            <div class="span12">
               {{ form_label(form.nombre) }}
               {{ form_widget(form.nombre) }}    
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_label(form.descripcion) }}
               {{ form_widget(form.descripcion) }}    
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_label(form.tarifaValor) }}
               {{ form_widget(form.tarifaValor) }}    
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_widget(form.permiteAutorizacionCortesia) }}   
               {{ form_label(form.permiteAutorizacionCortesia) }}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_widget(form.permiteAutorizacionInterna) }}   
               {{ form_label(form.permiteAutorizacionInterna) }}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_widget(form.permitePorCobrar) }}   
               {{ form_label(form.permitePorCobrar) }}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
               {{ form_widget(form.permiteFactura) }}   
               {{ form_label(form.permiteFactura) }}
            </div>
        </div>
        
        <input type="hidden" id="pathHomeEncomienda" value="{{ url('encomiendas-home') }}"></input>
        {{ form_rest(form) }}
        
    </form>
    
{% endblock %}

{% block contentFooterModal %}
    
    <a id="aceptar" href="#" class="btn btn-primary">Aceptar</a>
    <a id="cancelar" href="{{ url('homeInternal-default') }}" class="btn">Cancelar</a>
    
{% endblock %}






