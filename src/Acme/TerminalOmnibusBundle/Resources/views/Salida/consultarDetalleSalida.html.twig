                <th style="width: 5%; text-align:center; vertical-align:middle;" class="busTH">Bus</th>
                <th style="width: 20%; text-align:left; vertical-align:middle;" class="pilotosTH">Pilotos</th>
            </tr>
        </thead>
        <tbody id="salidaBody" style="vertical-align:middle;">
