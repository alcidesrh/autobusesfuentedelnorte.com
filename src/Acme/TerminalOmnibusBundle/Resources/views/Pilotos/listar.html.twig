{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Pilotos
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            frondendPilotos.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal" id="filtersForm">
        <div id="accordionFilters" class="accordion" >
        <div class="accordion-group">
        <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionFilters" href="#collapseFilters">
        Filtrar resultados
        </a>
        </div>    
        <div id="collapseFilters" class="accordion-body collapse">
        <div class="accordion-inner">
            
        <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="codigo">Código:</label>
            <div class="controls">
                <input type="text" id="codigo" name="codigo" placeholder="Filtrar por código" />
            </div>
            </div>       
         </div>
         <div class="span5" >
           <div class="control-group"> 
                <label class="control-label" for="nombre">Nombre:</label>
           <div class="controls">
                <input type="text" id="nombre" name="nombre"  placeholder="Filtrar por nombre" />
           </div>
           </div>       
         </div>     
        </div> 
       
        <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="numeroLicencia">Licencia:</label>
            <div class="controls">
                <input type="text" id="numeroLicencia" name="numeroLicencia" placeholder="Filtrar por licencia" />
            </div>
            </div>       
         </div>
         <div class="span5" >
           <div class="control-group"> 
                <label class="control-label" for="dpi">DPI:</label>
           <div class="controls">
                <input type="text" id="dpi" name="dpi"  placeholder="Filtrar por dpi" />
           </div>
           </div>       
         </div>     
        </div>       
       
        <div class="row-fluid">
         <div class="span5">
            <div class="control-group">
                <label class="control-label" for="seguroSocial">Seguro Social:</label>
            <div class="controls">
                <input type="text" id="seguroSocial" name="seguroSocial" placeholder="Filtrar por seguro social" />
            </div>
            </div>       
         </div>
         <div class="span5" >
           <div class="control-group"> 
                <label class="control-label" for="telefono">Teléfono:</label>
           <div class="controls">
                <input type="text" id="telefono" name="telefono"  placeholder="Filtrar por telefono" />
           </div>
           </div>       
         </div>     
        </div>
            
       </div>    

       <div class="control-group">
       <div class="controls"> 
            <a id="linkFilter" class="btn btn-primary" type="submit" href="#"><i class="icon-filter icon-white"></i> Filtrar</a>
       </div>
       </div> 
    
    </div>
    </div>
    </div>
    </form>

    {{ renderMenu('menuPilotos') }}   
    
    <table id="grid" style="display:none" data-url="{{url('pilotos-listarPaginado')}}"></table>
    
{% endblock %}

