<form action="{{ path(route) }}" method="post" {{ form_enctype(form) }}>
    
    <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
    {{ form_errors(form) }}
    
    <div class="container-fluid">
        
    <div class="row-fluid">
    <div class="span12">  
        <label> <strong> ¿Está seguro que desea autorizar la solicitud con identificador: {{ autorizacionOperacion.id }}.</strong> </label>
    </div> 
    </div>
    <div class="row-fluid">
        <div class="span6">
            <label class="control-label">Boleto:</label>
            <input class="span12" type="text" disabled value="{{ autorizacionOperacion.boleto.id }}"/>    
         </div> 
         <div class="span6">
            <label class="control-label">Estado:</label>
            <input class="span12" type="text"  disabled value="{{ autorizacionOperacion.estado.nombre }}"/>    
         </div> 
    </div> 
    <div class="row-fluid">
        <div class="span6">
            <label class="control-label">Tipo:</label>
            <input class="span12" type="text" disabled value="{{ autorizacionOperacion.tipo.nombre }}"/>       
         </div>
         <div class="span6">
            <label class="control-label">Estación:</label>
            <input class="span12" type="text"  disabled value="{{ autorizacionOperacion.estacion.nombre }}"/>       
         </div>
    </div> 
    <div class="row-fluid">
          <div class="span6">
            <label class="control-label">Usuario:</label>
            <input class="span12" type="text" disabled value="{{ autorizacionOperacion.usuarioCreacion.fullName }}"/>       
         </div>
         <div class="span6">
            <label class="control-label">Fecha:</label>
            <input class="span12" type="text" disabled value="{{ autorizacionOperacion.fechaCreacion | date('d/m/Y H:i:s') }}"/>       
         </div> 
     </div> 
     <div class="row-fluid">
        <div class="span12">
            <label class="control-label">Motivo:</label>
            <textarea class="span12" disabled row="2">{{ autorizacionOperacion.motivo }}</textarea>      
         </div>
    </div>
        
    </div> 

    {{ form_rest(form) }}
    
</form>