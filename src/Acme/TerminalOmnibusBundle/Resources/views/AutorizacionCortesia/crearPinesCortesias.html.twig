{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Crear Pines de Cortesías
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            crearPinAutorizacionCortesia.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal autorizacionCortesiaForm" id="autorizacionCortesiaForm" name="autorizacionCortesiaForm" action="{{ path(route) }}">
       
        <fieldset>
        <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
        {{ form_errors(form) }}
        
        <div class="row-fluid"> 
            <div class="span12">
                {{ form_label(form.cantidad) }}
                {{ form_widget(form.cantidad) }}
            </div>
        </div>
        
        <div class="row-fluid"> 
            <div class="span12">
                {{ form_label(form.motivo) }}
                {{ form_widget(form.motivo , {'attr': {'placeholder': 'Motivo de creación de los pines de cortesía.' } }) }}
            </div>
        </div> 
        
        <div class="row-fluid"> 
            <div class="span12">
                {{ form_label(form.usuarioNotificacion) }}
                {{ form_widget(form.usuarioNotificacion) }}
            </div>
        </div>
        
        {{ form_rest(form) }}
        
        </fieldset>
    </form>
    
{% endblock %}

{% block contentFooterModal %}
   
    <a id="aceptar" href="#" class="btn btn-primary">Aceptar</a>
    <a id="cancelar" href="{{ url('autorizacionCortesia-home') }}" class="btn">Cancelar</a>
     
{% endblock %}






