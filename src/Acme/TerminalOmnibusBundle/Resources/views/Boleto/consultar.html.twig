    <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Estación (Creación):</label>
            <input class="span12" type="text" disabled value="{{ boleto.estacionCreacion }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Usuario (Creación):</label>
            <input class="span12" type="text" disabled value="{{ boleto.usuarioCreacion }}"/>       
         </div> 
         <div class="span4">
            <label class="control-label">Fecha y Hora (Creación):</label>
            <input class="span12" type="text" disabled value="{{ boleto.fechaCreacion | date('d/m/Y H:i:s') }}"/>       
         </div>
     </div>  
     <BR>
    
     <div class="row-fluid margin-top-2">
     <div class="span12">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
            <tr>
                <th style="width: 15%; text-align:center; vertical-align:middle;">Fecha</th>
                <th style="width: 15%; text-align:center; vertical-align:middle;">Estado</th>
                <th style="width: 20%; text-align:left; vertical-align:middle;">Usuario</th>
                <th style="width: 50%; text-align:left; vertical-align:middle;">Descripción</th>
            </tr>
            </thead>
            <tbody>
                {% for item in boleto.bitacoras %}
                    <tr>
                        <td style="width: 15%; text-align:center; vertical-align:middle;">{{ item.fecha | date('d/m/Y H:i:s') }}</td>
                        <td style="width: 15%; text-align:center; vertical-align:middle;">{{ item.estado.nombre }}</td>
                        <td style="width: 20%; text-align:left; vertical-align:middle;">{{ item.usuario is null ? '' : item.usuario.fullName }}</td>
                        <td style="width: 50%; text-align:left; vertical-align:middle;">{{ item.descripcion }}</td>
                    </tr>		
                {% else %}
                    <tr><td colspan="4" >No existen datos</td></tr>
                {% endfor %}
            </tbody>
         </table>
     </div>
     </div>
    
     <BR><BR><BR><BR><BR><BR><BR><BR><BR><BR>
</div>  
</div>
</div>