<div class="container-fluid">
<div class="row-fluid">
<div class="span12">
      
     <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Identificador:</label>
            <input class="span12" type="text" placeholder="Identificador" disabled value="{{ boleto.id }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Número Asiento:</label>
            {% set asientoBus = 'N/D' %} 
            {% if boleto.asientoBus is not null %}
            {% set asientoBus = boleto.asientoBus.numero %} 
            {% endif %}
            <input class="span12" type="text" placeholder="Número Asiento" disabled value="{{ asientoBus }}"/>       
         </div> 
         <div class="span4">
            <label class="control-label">Fecha y Hora (SALIDA):</label>
            <input class="span12" type="text" placeholder="Fecha y Hora de Salida" disabled value="{{ boleto.salida.fecha | date('d/m/Y h:i A') }}"/>       
         </div>
     </div>  
     <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Clase Bus:</label>
            <input class="span12" type="text" placeholder="Clase Bus" disabled value="{{ boleto.salida.itinerario.tipoBus.clase.nombre }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Clase Asiento:</label>
            {% set claseAsientoBus = 'A' %} 
            {% if boleto.asientoBus is not null %}
            {% set claseAsientoBus = boleto.asientoBus.clase.nombre %} 
            {% endif %}
            <input class="span12" type="text" placeholder="Clase Asiento" disabled value="{{ claseAsientoBus }}"/>       
         </div>  
         <div class="span4">
            <label class="control-label">Estado:</label>
            <input class="span12" type="text" placeholder="Estado" disabled value="{{ boleto.estado.nombre }}"/>       
         </div>
     </div>
     <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Sube En</label>
            <input class="span12" type="text" placeholder="Estación origen" disabled value="{{ boleto.estacionOrigen }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Baja En</label>
            <input class="span12" type="text" placeholder="Estación destino" disabled value="{{ boleto.estacionDestino }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Observación Baja En</label>
            <input class="span12" type="text" placeholder="No definido" disabled value="{{ boleto.observacionDestinoIntermedio }}"/>       
         </div>
     </div> 
    <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Tipo de Documento</label>
            <input class="span12" type="text" placeholder="Tipo de documento" disabled value="{{ boleto.tipoDocumento.nombre }}"/>       
         </div>
        <div class="span4">
            <label class="control-label">Autorización de Cortesía</label>
            {% set autorizacionCortesia = 'No definido' %}
            {% if boleto.autorizacionCortesia is not null %}
                {% set autorizacionCortesia = boleto.autorizacionCortesia %}
            {% endif %}
            <input class="span12" type="text" placeholder="Autorización de cortesía" disabled value="{{ autorizacionCortesia }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Estación Registro de Facturación Especial</label>
            <input class="span12" type="text" placeholder="No definido" disabled value="{{ boleto.estacionFacturacionEspecial }}"/>       
         </div>
     </div> 
    <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Autorización Tarjeta</label>
            {% set autorizacionTarjeta = 'No definido' %}
            {% if boleto.facturaGenerada is not null %}
                {% set autorizacionTarjeta = boleto.facturaGenerada.autorizacionTarjeta %}
            {% endif %}
            <input class="span12" type="text" placeholder="No definido" disabled value="{{ autorizacionTarjeta }}"/>       
         </div>
        <div class="span4">
            <label class="control-label">Referencia Externa</label>
            {% set referenciaExterna = 'No definido' %}
            {% if boleto.facturaGenerada is not null %}
                {% set referenciaExterna = boleto.facturaGenerada.referenciaExterna %}
            {% endif %}
            <input class="span12" type="text" placeholder="No definido" disabled value="{{ referenciaExterna }}"/>       
         </div>
         <div class="span4">
             <label class="control-label" for="activo">Respetar asiento desde el origen de la ruta</label>
             {% set utilizarDesdeEstacionOrigenSalida = 'NO' %}
             {% if boleto.utilizarDesdeEstacionOrigenSalida %}
                {% set utilizarDesdeEstacionOrigenSalida = 'SI' %}
             {% endif %}
             <input class="span12" type="text" placeholder="No definido" disabled value="{{ utilizarDesdeEstacionOrigenSalida }}"/> 
         </div>
     </div>
    <div class="row-fluid">
         <div class="span4">
            <label class="control-label">Tipo de Pago</label>
            {% set tipoPago = 'No definido' %}
            {% if boleto.tipoPago is not null %}
                {% set tipoPago = boleto.tipoPago %}
            {% endif %}
            <input class="span12" type="text" placeholder="Tipo de pago" disabled value="{{ tipoPago }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Factura Generada</label>
            {% set facturaGenerada = 'No definido' %}
            {% if boleto.facturaGenerada is not null %}
                {% set facturaGenerada = boleto.facturaGenerada.info2 %}
            {% endif %}
            <input class="span12" type="text" placeholder="Factura generada" disabled value="{{ facturaGenerada }}"/>       
         </div>
         <div class="span4">
            <label class="control-label">Precio</label>
            <div class="input-prepend">
            {% set moneda = '' %}
            {% if boleto.moneda is not null %}
                {% set moneda = boleto.moneda.sigla %}
            {% endif %}
            <span class="add-on">{{ moneda }}</span>
                {% set precioCalculado = 'No definido' %}
                {% if boleto.precioCalculado is not null %}
                    {% set precioCalculado = boleto.precioCalculado %}
                {% endif %}
                <input type="text" placeholder="Precio del boleto" disabled value="{{ precioCalculado }}"/>  
            </div>
         </div>
     </div>
