{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
   Configurar Tiempos
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            configurarTiempo.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}

<form class="form-horizontal configurarTiempoForm" id="configurarTiempoForm" name="configurarTiempoForm" action="{{ path(route) }}" method="post">
    
    <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
    {{ form_errors(form) }}
    
    <div class="container-fluid">
            
    <div class="row-fluid"> 
    <div class="span12">
    {{ form_label(form.ruta) }}
    {{ form_widget(form.ruta) }}
    </div>
    </div> 
        
    <div class="row-fluid"> 
    <div class="span12">
    {{ form_label(form.claseBus) }}
    {{ form_widget(form.claseBus) }}
    </div>
    </div>
    
    <br>
    <div class="row-fluid">
    <div id="estacionesTable" class="span12">
        <table class="table table-striped table-bordered table-hover">
            <thead>      
                <tr>
                    <th style="width: 70%; text-align:left; vertical-align:middle;" class="idEncomiendaTH">Estaci√≥n</th>
                    <th style="width: 30%; text-align:center; vertical-align:middle;" class="entregarTH">Tiempo (Minutos)</th>
                </tr>
            </thead>
            <tbody id="estacionesBody" style="vertical-align:middle;">
                    <tr id="estacionesVacioTR">
                        <td colspan="2"> No existen elementos.</td> 
                    </tr>
            </tbody>
        </table>    
     </div>   
     </div>    
        
        
    </div>  
    
     <input type="hidden" id="pathListarTiempos" value="{{ url('ajaxListarTiemposEstacionesByRuta') }}"></input>
    {{ form_rest(form) }}
    
</form>
    
{% endblock %}

{% block contentFooterModal %}
   
    <a id="aceptar" href="#" class="btn btn-primary">Aceptar</a>
    <a id="cancelar" href="{{ url('homeInternal-default') }}" class="btn">Cancelar</a>
     
{% endblock %}