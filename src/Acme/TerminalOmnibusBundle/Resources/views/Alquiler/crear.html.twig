{% extends "::content.html.twig" %}

{% block contentHeaderModal %}
    Registrar Alquiler Bus
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            crearAlquiler.funcionesAddOnload();	
        }); 
    </script>
{% endblock %}
           
{% block contentBodyModal %}
    
    <form class="form-horizontal alquilerForm" id="alquilerForm" name="alquilerForm" action="{{ path(route) }}" method="post" {{ form_enctype(form) }}>
       
        <input type="hidden" name="mensajeServidor" id="mensajeServidor" value="{{ mensajeServidor }}"></input>
        {{ form_errors(form) }}
        
        <div class="row-fluid"> 
            <div class="span6">
                {{ form_label(form.rangoFecha) }}
                {{ form_widget(form.rangoFecha) }}
                {{ form_errors(form.rangoFecha ) }}
            </div>
            <div class="span6">
                {{ form_label(form.empresa) }}
                {{ form_widget(form.empresa) }}
                {{ form_errors(form.empresa ) }}
            </div>
        </div> 
        
        <div class="row-fluid"> 
            <div class="span6">
                {{ form_label(form.piloto) }}
                {{ form_widget(form.piloto) }}
                {{ form_errors(form.piloto ) }}
            </div>
            <div class="span6">
                {{ form_label(form.pilotoAux) }}
                {{ form_widget(form.pilotoAux) }}
                {{ form_errors(form.pilotoAux ) }}
            </div>
        </div> 
        
        <div class="row-fluid"> 
            <div class="span6">
                {{ form_label(form.bus) }}
                {{ form_widget(form.bus) }}
                {{ form_errors(form.bus ) }}
            </div>
            <div class="span6">
                {{ form_label(form.importe) }}
                {{ form_widget(form.importe) }}
                {{ form_errors(form.importe ) }}
            </div>
        </div> 
        
        <div class="row-fluid"> 
            <div class="span12">
                {{ form_label(form.observacion) }}
                {{ form_widget(form.observacion, {'attr': {'style': 'height: 200px;' } }) }}
                {{ form_errors(form.observacion) }}
            </div>
        </div> 
        
        <input type="hidden" id="pathHomeAlquiler" value="{{ url('alquiler-home') }}"></input>
        {{ form_rest(form) }}
        
    </form>
    
{% endblock %}

{% block contentFooterModal %}
   
    <a id="aceptar" href="#" class="btn btn-primary">Aceptar</a>
    <a id="cancelar" href="{{ url('homeInternal-default') }}" class="btn">Cancelar</a>
     
{% endblock %}






